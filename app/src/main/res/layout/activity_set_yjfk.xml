<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	android:baselineAligned="false"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/rltop_set_yjfk"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
>

	<RelativeLayout
		android:background="@drawable/layout_top"
		android:layout_width="fill_parent"
		android:id="@+id/set_rl_top"
		android:layout_height="wrap_content"
	>
		<Button
			android:id="@+id/set_yjfk_cancel"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:background="@drawable/btn_back_s" />

		<TextView
			android:layout_centerInParent="true"
			android:gravity="center_horizontal"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/set_feedback"
			android:textAppearance="@style/TextAppearanceTitleLagerForWhite" />

	</RelativeLayout>

	<RelativeLayout
		android:layout_below="@id/set_rl_top"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
	>
		<TextView
			android:id="@+id/set_yjfk_tx"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/set_your_opinion_orAdvice"
			android:textColor="#666666"
			android:textSize="15sp" />
		<EditText
			android:layout_marginTop="15dp"
			android:id="@+id/set_yjfk_content"
			android:layout_width="fill_parent"
			android:layout_height="150dp"
			android:hint="@string/set_plz_input"
			android:padding="5dp"
			android:gravity="top"
			android:textColor="#b2b2b2"
			android:textSize="15sp"
			android:background="@drawable/layout_width"
			android:layout_below="@id/set_yjfk_tx" />
		<Button
			android:id="@+id/set_yjfk_ok"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_below="@id/set_yjfk_content"
			android:background="@drawable/btn_icon_s"
			android:text="@string/map_send"
			android:textAppearance="@style/TextAppearanceTitleLagerForWhite"
			android:textColor="#ffffff"
			android:layout_marginTop="20dp" />
	</RelativeLayout>


</RelativeLayout>



