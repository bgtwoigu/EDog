<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rltop_more"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_top" >

        <Button
            android:id="@+id/set_btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_back_s" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/set_title"
            android:textAppearance="@style/TextAppearanceTitleLagerForWhite" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/top" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/second"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/layout_width"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/set_btn_softupdate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_top_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_updateversion"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <Button
                    android:id="@+id/set_btn_intro"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_top_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_introduction"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <Button
                    android:id="@+id/set_start_imitate"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_bot_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_imitate"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/set_btn_report"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_top_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_report"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/more_multi_top_s"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:gravity="left|center_vertical"
                    android:padding="10dp" >

                    <TextView
                        android:id="@+id/set_tv_radar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_centerVertical="true"
                        android:text="@string/set_radarcom"
                        android:textAppearance="@style/TextAppearanceContextLager"
                        android:textColor="@drawable/share_color_black_black_s" />

                    <Spinner
                        android:id="@+id/spinner_radar_com"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <Button
                    android:id="@+id/set_btn_smartrcloud"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_mid_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_smartr_cloud"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <Button
                    android:id="@+id/set_btn_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_mid_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_feedback"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/home_icon_line2" />

                <Button
                    android:id="@+id/set_btn_about"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/more_multi_mid_s"
                    android:drawableRight="@drawable/share_table_indicator"
                    android:gravity="left|center_vertical"
                    android:padding="10dp"
                    android:text="@string/set_about"
                    android:textAppearance="@style/TextAppearanceContextLager"
                    android:textColor="@drawable/share_color_black_black_s" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout><!-- From: file:/C:/Users/zhangzhaolei.EROBBING/AppData/Local/Android/StudioProjects/EDog/app/src/main/res/layout/activity_setting.xml -->